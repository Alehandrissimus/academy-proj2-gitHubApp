<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvIssueDetailsRepo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="repo name+issue num" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvIssueDetailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvIssueDetailsRepo"
            tools:text="Issue title" />

        <View
            android:id="@+id/vDetails"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tvIssueDetailsTitle" />

        <ImageView
            android:id="@+id/ivIssueDetails"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vDetails" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvIssueDetailsUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/ivIssueDetails"
            app:layout_constraintTop_toTopOf="@+id/ivIssueDetails"
            tools:text="UserName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvIssueDetailsTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivIssueDetails"
            app:layout_constraintStart_toEndOf="@+id/ivIssueDetails"
            app:layout_constraintTop_toBottomOf="@+id/tvIssueDetailsUserName"
            tools:text="posttime" />

        <TextView
            android:id="@+id/tvIssueDetailsBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivIssueDetails"
            tools:text="@tools:sample/lorem" />

        <View
            android:id="@+id/vDetails2"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tvIssueDetailsBody" />

        <ProgressBar
            android:id="@+id/pbIssueDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>